---
import { Link } from "@components/link";
import { paths } from "@paths";
import { Image } from "astro:assets";
import ImgHome from "./assets/home.svg";
import ImgMagnifier from "./assets/magnifier.svg";
import ImgMovie from "./assets/movie.svg";
import ImgTv from "./assets/tv.svg";
---

<nav class="bg-black px-6 py-8 text-black">
  <ul class="flex justify-around gap-10 md:flex-col md:justify-start">
    <li class="hover:opacity-80">
      <Link client:idle href={paths.index}>
        <Image alt="Home" class="h-6 w-6" src={ImgHome} />
      </Link>
    </li>
    <li class="hover:opacity-80">
      <Link client:idle href={paths.movies}>
        <Image alt="Movies" class="h-6 w-6" src={ImgMovie} />
      </Link>
    </li>
    <li class="hover:opacity-80">
      <Link client:idle href={paths.tv}>
        <Image alt="TV" class="h-6 w-6" src={ImgTv} />
      </Link>
    </li>
    <li class="hover:opacity-80">
      <Link client:idle href={paths.search}>
        <Image alt="Search" class="h-6 w-6" src={ImgMagnifier} />
      </Link>
    </li>
  </ul>
</nav>
