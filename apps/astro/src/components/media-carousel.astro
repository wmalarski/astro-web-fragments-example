---
import type { MediaBase } from "../integrations/tmdb/types";
import { Link } from "./link.tsx";
import { MediaCardContent, MediaCardLink } from "./media-card.tsx";

type Props = {
  collection: MediaBase[];
  title: string;
  viewAllHref: string;
};

const { collection, title, viewAllHref } = Astro.props;
---

<section>
  <div class="flex flex-row items-center px-12 py-2">
    <h2 class="text-2xl text-white">{title}</h2>
    <div class="flex-auto"></div>
    <Link
      class="transition-text opacity-80 duration-100 ease-in-out hover:text-qwik-light-blue hover:opacity-100"
      href={viewAllHref}
      client:idle
    >
      Explore All
    </Link>
  </div>
  <div class="relative">
    <div class="overflow-y-auto px-8 py-4">
      <div class="flex w-max flex-row gap-2">
        {
          collection?.map((media) => (
            <div>
              <MediaCardLink
                client:idle
                mediaId={media.id}
                mediaType={media.media_type}
              >
                <MediaCardContent media={media} />
              </MediaCardLink>
            </div>
          ))
        }
        <Link
          client:idle
          class="transition-text flex w-44 items-center justify-center duration-100 ease-in-out hover:text-qwik-light-blue"
          href={viewAllHref}
        >
          Explore All
        </Link>
      </div>
    </div>
  </div>
</section>
