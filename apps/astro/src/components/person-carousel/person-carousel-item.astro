---
import { Link } from "@components/link";
import { getProfile, getProfileSet } from "@integrations/tmdb/images";
import type { Cast, Crew } from "@integrations/tmdb/types";
import { paths } from "@paths";

type Props = {
  media: Cast | Crew;
};

const { media } = Astro.props;
---

<Link client:idle href={paths.person(media.id)} class="w-48 block">
  <div
    class="transition-scale scale-95 duration-300 ease-in-out hover:scale-100"
  >
    <picture>
      <img
        alt={media.name}
        class="max-w-full border-4 border-base-300 object-cover"
        height={270}
        src={getProfile(media, "w45")}
        srcset={getProfileSet(media)}
        width={185}
      />
    </picture>
  </div>
  <span>{media.name}</span>
</Link>
